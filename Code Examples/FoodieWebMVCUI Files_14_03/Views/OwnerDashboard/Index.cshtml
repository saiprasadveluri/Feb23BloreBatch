@using FoodDelApp.Data
@model OwnerDashboardViewModel

@{
}
<h3 class="mainHeading">Owner Dashboard</h3>
<hr />
<label class="sideHeading">User List</label>
<div width="100%" style="text-align:end;padding-right:20px;"></div>

<label class="sideHeading">Restaurant List</label>
<div class="divTable">
    <table>
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Location
                </th>                
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (RestaurantDTO itm in Model.Restaurants)
            {
                <tr>
                    <td>
                        @itm.Name
                    </td>
                    <td>
                        @itm.Location
                    </td>                    
                    <td>
                        <div>
                            <a href="/MenuManager/Index?Id=@itm.RID">Manage Menu</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>